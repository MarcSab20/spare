{
    "compilerOptions": {
      "target": "ES2018",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "lib": ["ES2020", "DOM"],
      "types": ["node"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
  }