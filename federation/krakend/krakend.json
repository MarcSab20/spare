{
  "version": 3,
  "name": "KrakenD API Gateway - Point d'entr√©e principal",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 8080,
  "endpoints": [
    {
      "endpoint": "/graphql",
      "method": "POST",
      "output_encoding": "no-op",
      "input_headers": ["Content-Type", "Authorization", "X-User-ID", "X-Request-ID"],
      "backend": [
        {
          "url_pattern": "/graphql",
          "encoding": "no-op",
          "method": "POST",
          "host": ["http://apollo-gateway:4000"],
          "disable_host_sanitize": true,
          "extra_config": {
            "backend/http": {
              "return_error_details": "backend_alias"
            }
          }
        }
      ],
      "extra_config": {
        "qos/ratelimit/router": {
          "max_rate": 100,
          "capacity": 100,
          "client_max_rate": 20,
          "client_capacity": 20
        }
      }
    },
    {
      "endpoint": "/api/health",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/health",
          "host": ["http://apollo-gateway:4000"]
        }
      ]
    },
    {
      "endpoint": "/api/debug",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/debug",
          "host": ["http://apollo-gateway:4000"]
        }
      ]
    },
    {
      "endpoint": "/health",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/__health",
          "host": ["http://apollo-gateway:4000"],
          "mapping": {
            "status": "status"
          }
        }
      ],
      "extra_config": {
        "modifier/response-body-generator": {
          "template": "{\"status\": \"OK\", \"service\": \"krakend-gateway\", \"timestamp\": \"{{.now.Unix}}\", \"apollo_status\": \"{{.resp0_status}}\"}"
        }
      }
    },
    {
      "endpoint": "/api/auth/{action}",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/{action}",
          "host": ["http://host.docker.internal:3001"],
          "disable_host_sanitize": true
        }
      ],
      "extra_config": {
        "qos/ratelimit/router": {
          "max_rate": 50,
          "capacity": 50
        }
      }
    }
  ],
  "extra_config": {
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allow_headers": ["Origin", "Authorization", "Content-Type", "X-User-ID", "X-Request-ID"],
      "expose_headers": ["Content-Length", "X-Request-ID"],
      "max_age": "12h"
    },
    "telemetry/metrics": {
      "collection_time": "60s",
      "proxy_disabled": false,
      "router_disabled": false,
      "backend_disabled": false,
      "endpoint_disabled": false,
      "listen_address": ":8091"
    },
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND-GATEWAY]",
      "syslog": false,
      "stdout": true,
      "format": "json"
    }
  }
}